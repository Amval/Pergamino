doctype html
html
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= pageTitle
    link(rel='stylesheet', href='/css/ornamento.css')
    
  body
    header  

        div#sidebar-wrapper
            .sidebar.black
                ul
                    li 
                        a(href="/") My Blog
                    .divider
                    if session.isLoggedIn
                        li Welcome,
                            a.button.blue.rectangle #{user}
                        li 
                            a(href="/post/create") Write post
                        li 
                            a(href="/logout") Logout
                        li.divider
                    else
                        li
                            a(href="/login") Login
                        li.divider
                            a(href="/signup") Sign Up
                        li.divider
            
            .col-12
                .button.green.rectangle#menu-toggle Menu
            .col-12
                block content


script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js')
script(src='//cdnjs.cloudflare.com/ajax/libs/foundation/5.1.1/js/foundation.min.js')