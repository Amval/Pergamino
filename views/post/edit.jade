extends ../layout

block content
    form(method="POST", action="/post/edit/"+post.id)
        .row
            .large-12.columns
                label(for="title") Title:
                    input.error#title(name="title", type="text", value= post.title)
                if userInvalid
                    small.error That user doesn"t exist
                br
                textarea.error#body(name="body", rows="8")= post.body
                if passInvalid
                    small.error Password incorrect.
                label(for="tags") Tags
                    input.error#tags(name="tags", type="text")
                br
                input.button.small.round.success(type="submit", value="Save") 